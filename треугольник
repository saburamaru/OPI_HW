using System;

namespace треугольник
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите длину катета:");
            int m  = Convert.ToInt32(Console.ReadLine());
            for (int i = 1; i < m + 1; i++)
            {
                for (int j = 1; j < i + 1; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }
		}
    }
}
